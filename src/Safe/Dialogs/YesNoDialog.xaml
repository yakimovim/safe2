<UserControl x:Class="Safe.Dialogs.YesNoDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Icon" Value="/Images/safe24.png" />
            <Setter Property="Height" Value="150" />
            <Setter Property="Width" Value="400" />
        </Style>
    </prism:Dialog.WindowStyle>
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Message}" FontSize="20" HorizontalAlignment="Center"
                   Margin="10" />
        <StackPanel Style="{StaticResource BottomButtonsPanel}">
            <Button Style="{StaticResource GeneralButton}" 
                    Content="Yes" 
                    Command="{Binding YesCommand}" />
            <Button Style="{StaticResource GeneralButton}" 
                    Content="No" 
                    Command="{Binding NoCommand}" />
        </StackPanel>
    </StackPanel>
</UserControl>
